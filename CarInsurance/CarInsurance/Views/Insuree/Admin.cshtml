@using CarInsurance.Models
@model IEnumerable<CarInsurance.Models.Insuree>

<div class="row row-no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h2 class="m-0">Insurance Quotes</h2>
        </div>
        <div">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email Address</th>
                        <th>Quote</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var insuree in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => insuree.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => insuree.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => insuree.EmailAddress)</td>
                            <td>@Html.DisplayFor(modelItem => insuree.Quote)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>