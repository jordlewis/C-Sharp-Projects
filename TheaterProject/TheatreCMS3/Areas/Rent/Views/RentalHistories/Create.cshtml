@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/Content/Areas/Rent.css"/>
</head>

<body id="body-bg">

    <div class="c-e-heading">
        <h2>Create Rental History</h2>
    </div>

    <div class="rh-container mx-auto">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-row mx-auto">
                <div class="col-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Rental, "Rental", htmlAttributes: new { @class = "control-label col-md-2 float-left" })
                        @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-3">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RentalDamaged, "Rental Damaged", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div id ="check-box" class="checkbox">
                            @Html.EditorFor(model => model.RentalDamaged)
                            @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row mx-auto">
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DamagesIncurred, "Notes", htmlAttributes: new { @class = "control-label col-md-2 float-left", id = "label-id" })
                        <div>
                            @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="create-buttons">
                <div class="btn btn-dark">
                    @Html.ActionLink("Back to List", "Index", null, new { style = "text-decoration:none; color:white;" })
                </div>
                <input type="submit" value="Create" class="btn btn-success" />
              </div>
            </div>
            }
        </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
